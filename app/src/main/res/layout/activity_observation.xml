<!-- res/layout/activity_observation.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observation Text"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextAdditionalComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Additional Comment (Optional)"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonAddObservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Observation" />
    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginTop="16dp"
        android:onClick="onStopButtonClick" />

    <ListView
        android:id="@+id/observationListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />
</LinearLayout>
